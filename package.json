{
  "name": "sentrei.com",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://sentrei.com",
  "bugs": {
    "url": "https://github.com/sentrei/sentrei.com/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sentrei/sentrei.com.git"
  },
  "license": "ISC",
  "author": "Shun Kakinoki",
  "scripts": {
    "check": "yarn run depcheck && yarn run lint && yarn run release:check",
    "eslint:check": "eslint src -c .eslintrc.json --ext .ts,.tsx --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "eslint:fix": "eslint --fix src -c .eslintrc.json --ext .ts,.tsx --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "fix": "yarn run jsonsort:fix && yarn run sort-package-json:fix && yarn run eslint:fix && yarn run prettier:fix",
    "jsonsort:check": "jsonsort *.json -a -c",
    "jsonsort:fix": "jsonsort *.json -a",
    "lint": "yarn run jsonsort:check && yarn run sort-package-json:check && yarn run eslint:check && yarn run prettier:check",
    "ncu:check": "ncu -p yarn",
    "ncu:upgrade": "ncu -u -p yarn",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "release": "semantic-release",
    "release:check": "semantic-release -d",
    "sort-package-json:check": "sort-package-json 'package.json' --check",
    "sort-package-json:fix": "sort-package-json 'package.json'"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true"
    }
  },
  "dependencies": {
    "next": "^10.0.2",
    "react": "^0.0.0-experimental-4ead6b530",
    "react-dom": "^0.0.0-experimental-4ead6b530",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^10.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/parser": "^4.8.1",
    "commitizen": "^4.2.2",
    "depcheck": "^1.3.1",
    "eslint": "^7.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.7.4",
    "husky": "^4.3.0",
    "json-sort-cli": "^1.16.5",
    "npm-check-updates": "^10.2.2",
    "prettier": "^2.2.0",
    "semantic-release": "^17.2.4",
    "sort-package-json": "^1.48.0",
    "typescript": "^4.1.2"
  }
}
